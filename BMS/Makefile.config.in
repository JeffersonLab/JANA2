# BMS system configuration
#
# This file contains variables defined by the configure script.
# It is included by Makefile.common and any other Makefile
# that only needs configuration information.
#

BMS_OSNAME     := @BMS_OSNAME@

HAVE_MYSQL     := @HAVE_MYSQL@
HAVE_XERCES    := @HAVE_XERCES@
HAVE_ROOT      := @HAVE_ROOT@
HAVE_CMSG      := @HAVE_CMSG@
HAVE_CCDB      := @HAVE_CCDB@
HAVE_CURL      := @HAVE_CURL@

MYSQL_CFLAGS    = @MYSQL_CFLAGS@
MYSQL_LDFLAGS   = @MYSQL_LDFLAGS@
MYSQL_VERSION   = @MYSQL_VERSION@

XERCES_CPPFLAGS = @XERCES_CPPFLAGS@
XERCES_LDFLAGS  = @XERCES_LDFLAGS@
XERCES_VERSION  = @XERCES_VERSION@

# if xerces support is built into the JANA library then all JANA
# programs will need to link in the xerces library.
ifeq ($(HAVE_XERCES), 1)
  PACKAGES += XERCES
endif

# Same for CURL library.
ifeq ($(HAVE_CURL), 1)
  PACKAGES += CURL
endif

# ... and CCDB
ifeq ($(HAVE_CCDB), 1)
  PACKAGES += CCDB
endif


ROOTCONF        = @ROOTCONF@
ROOTEXEC        = @ROOTEXEC@
ROOTCINT        = @ROOTCINT@
ROOTLIBDIR      = @ROOTLIBDIR@
ROOTINCDIR      = @ROOTINCDIR@
ROOTCFLAGS      = @ROOTCFLAGS@
ROOTLIBS        = @ROOTLIBS@
ROOTGLIBS       = @ROOTGLIBS@
ROOTAUXLIBS     = @ROOTAUXLIBS@
ROOTAUXCFLAGS   = @ROOTAUXCFLAGS@
ROOTRPATH       = @ROOTRPATH@


CMSG_CPPFLAGS   = @CMSG_CPPFLAGS@
CMSG_LDFLAGS    = @CMSG_LDFLAGS@
CMSG_LIBS       = @CMSG_LIBS@

CCDB_CPPFLAGS   = @CCDB_CPPFLAGS@
CCDB_LDFLAGS    = @CCDB_LDFLAGS@
CCDB_LIBS       = @CCDB_LIBS@

CURL_PREFIX     = @CURL_PREFIX@
CURL_CFLAGS     = @CURL_CFLAGS@
CURL_LDFLAGS    = @CURL_LDFLAGS@
CURL_LIBS       = @CURL_LIBS@


FFLAGS_CONFIGURE   = @FFLAGS_CONFIGURE@
CFLAGS_CONFIGURE   = @CFLAGS_CONFIGURE@
CXXFLAGS_CONFIGURE = @CXXFLAGS_CONFIGURE@
LDFLAGS_CONFIGURE  = @LDFLAGS_CONFIGURE@

prefix          = @prefix@
exec_prefix     = @exec_prefix@

JANA_BUILD_DIR  = @JANA_BUILD_DIR@

